generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")    
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  password      String?
  image         String?
  isOwner       Boolean   @default(false)
  isUser        Boolean   @default(false)  
  accounts      Account[]
  bookings      Booking[] @relation("UserBookings")
  sessions      Session[]
  venues        Venue[]   @relation("OwnerVenues")
}

model Venue {
  id             String    @id @default(uuid())
  name           String    @unique
  totalCarSlots  Int
  totalBikeSlots Int
  ownerId        String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  bookings       Booking[] @relation("VenueBookings")
  owner          User      @relation("OwnerVenues", fields: [ownerId], references: [id], onDelete: Cascade)
}

model Booking {
  id            String        @id @default(uuid())
  userId        String
  venueId       String
  userName      String
  phoneNumber   String
  vehicleType   VehicleType
  vehicleNumber String
  slotNumber    Int?
  status        BookingStatus @default(PENDING)
  expiresAt     DateTime
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  user          User          @relation("UserBookings", fields: [userId], references: [id], onDelete: Cascade)
  venue         Venue         @relation("VenueBookings", fields: [venueId], references: [id], onDelete: Cascade)

  @@unique([venueId, vehicleType, slotNumber])
  @@index([userId])
  @@index([venueId])
}

enum VehicleType {
  CAR
  BIKE
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  EXPIRED
}
